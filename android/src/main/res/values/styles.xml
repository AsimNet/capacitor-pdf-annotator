<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PdfAnnotator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Popup menu styling -->
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <!-- Toolbar style with white icons -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <!-- Theme overlay for toolbar with white icons -->
    <style name="ToolbarThemeOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- Popup menu style for overflow menu (supports dark mode) -->
    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/popup_background</item>
    </style>

    <!-- Toolbar popup theme overlay (supports dark mode) -->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/popup_background</item>
        <item name="android:textColorPrimary">@color/popup_text</item>
        <item name="android:textColorSecondary">@color/popup_text</item>
    </style>
</resources>
