<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_floating_toolbox"
    android:elevation="8dp"
    android:minWidth="180dp"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/select_size"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/toolbox_icon_color" />

    <LinearLayout
        android:id="@+id/sizeSmall"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/color_circle_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/size_small"
            android:textColor="@color/toolbox_icon_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sizeMedium"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/color_circle_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/size_medium"
            android:textColor="@color/toolbox_icon_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sizeLarge"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/color_circle_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/size_large"
            android:textColor="@color/toolbox_icon_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sizeXLarge"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/color_circle_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/size_xlarge"
            android:textColor="@color/toolbox_icon_color" />
    </LinearLayout>

</LinearLayout>
